<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/ivPandora"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/droid" />

        <ImageView
            android:id="@+id/ivSpotify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/ivShazam"
            android:layout_below="@+id/ivShazam"
            android:layout_marginTop="20dp"
            android:src="@drawable/droid" />

        <ImageView
            android:id="@+id/ivShazam"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/ivPandora"
            android:layout_below="@+id/ivPandora"
            android:layout_marginTop="25dp"
            android:src="@drawable/droid" />

        <ImageView
            android:id="@+id/ivAmazonMp3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/ivSpotify"
            android:layout_below="@+id/ivSpotify"
            android:layout_marginTop="25dp"
            android:src="@drawable/droid" />

        <ImageView
            android:id="@+id/ivGooglePlayMusic"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/ivAmazonMp3"
            android:layout_below="@+id/ivAmazonMp3"
            android:layout_marginTop="25dp"
            android:src="@drawable/droid" />

</RelativeLayout>