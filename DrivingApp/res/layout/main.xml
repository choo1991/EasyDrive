<?xml version="1.0" encoding="utf-8"?>	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/clockWidgetLocation"
	    android:layout_width="fill_parent"
	    android:layout_height="160dp"
	    android:orientation="vertical" >
	</LinearLayout>
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

		<ImageView
		    android:id="@+id/firstIcon"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:contentDescription="@string/phoneIcon"
		    android:src="@drawable/droid"
		    android:visibility="visible" />

		<Button
		    android:id="@+id/firstButton"
		    android:layout_width="200dp"
		    android:layout_height="60dp"
		    android:onClick="openApp"
		    android:text="@string/phone" />
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

		<ImageView
		    android:id="@+id/secondIcon"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:contentDescription="@string/secondIcon"
		    android:src="@drawable/droid"
		    android:visibility="visible" />

		<Button
		    android:id="@+id/secondButton"
		    android:layout_width="200dp"
		    android:layout_height="60dp"
		    android:onClick="openApp" /> 
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

		<ImageView
		    android:id="@+id/thirdIcon"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:contentDescription="@string/thirdIcon"
		    android:src="@drawable/droid"
		    android:visibility="visible" />

		<Button
		    android:id="@+id/thirdButton"
		    android:layout_width="200dp"
		    android:layout_height="60dp"
		    android:onClick="openApp" />	
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

		<ImageView
		    android:id="@+id/fourthIcon"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:contentDescription="@string/fourthIcon"
		    android:src="@drawable/droid"
		    android:visibility="visible" />

		<Button
		    android:id="@+id/fourthButton"
		    android:layout_width="200dp"
		    android:layout_height="60dp"
		    android:onClick="openApp" />
	</LinearLayout>
	     
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="25dp"
		android:gravity="center" >
	    
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
		<Button
		    android:id="@+id/exitButton"
		    android:layout_width="250dp"
		    android:layout_height="60dp"
		    android:onClick="exitLockScreen"
		    android:text="@string/exit_screen" />
	</LinearLayout>
</LinearLayout>
		
		
